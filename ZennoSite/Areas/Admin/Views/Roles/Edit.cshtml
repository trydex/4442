@model ApplicationRole

<form asp-action="Edit" method="post">
    <input hidden="hidden" name="id" value="@Model.Id"/>
    <div class="form-group">
        <label for="Name">Имя роли:</label>
        <input type="text" class="form-control" id="Name" name="name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="DisplayName">Отображаемое имя:</label>
        <input type="text" class="form-control" id="DisplayName" name="displayName" value="@Model.DisplayName" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>