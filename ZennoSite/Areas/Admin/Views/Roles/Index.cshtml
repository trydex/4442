@model IEnumerable<ApplicationRole>
@{
    ViewBag.Title = "Управление ролями";
}

<form asp-action="Create" method="post" class="form-inline">
    <div class="form-group">
        <label for="Name" class="form-check-label">Название роли:</label>
        <input type="text" class="form-check-input" id="Name" name="name"/>
    </div>
    <div class="form-group">
        <label for="DisplayName" class="form-check-input">Отображаемое название:</label>
        <input type="text" class="form-check-input" id="DisplayName" name="displayName"/>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>


<table class="data-table"
       data-page-length="25">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Отображаемое название</th>
            <th>Управление</th>
        </tr>
    </thead>
    <tbody>
     @foreach (var role in Model)
     {
         <tr>
             <td>@role.Id</td>
             <td>@role.Name</td>
             <td>@role.DisplayName</td>
             <td>
                 <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Редактировать</a>
                 <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                     <button type="submit" class="btn btn-danger">Удалить</button>
                 </form>
             </td>
         </tr>
     }
    </tbody>
</table>