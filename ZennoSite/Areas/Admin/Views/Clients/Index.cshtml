@model IEnumerable<ZennoSite.Areas.Admin.Models.Client>

@{
    ViewData["Title"] = "Управление клиентами";
}

<h2>Управление клиентами</h2>

<p>
    <a asp-action="Create" class="btn btn-secondary">Добавить</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UtmSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdditionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsBanned)
        </th>
        <th>Продукты</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UtmSource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdditionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsBanned)
        </td>
        <td>@item.Licenses.Count</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Детали</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
        </td>
    </tr>
}
    </tbody>
</table>
