@model CreateUserViewModel
@{
    ViewBag.Title = "Создание пользователя";
}

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label for="Login" class="form-check-label">Логин:</label>
        <input type="text" class="form-check-input" id="Login" name="Login"/>
    </div>
    <div class="form-group">
        <label for="Password" class="form-check-label">Пароль:</label>
        <input type="text" class="form-check-input" id="Password" name="Password"/>
    </div>
    <div class="form-group">
        <label for="Nickname" class="form-check-label">Ник:</label>
        <input type="text" class="form-check-input" id="Nickname" name="Nickname"/>
    </div>
    <div class="form-group">
        <label>Роли</label>
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="roles" value="@role.Name" id="@role.Name"/>
                <label for="@role.Name" class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>
