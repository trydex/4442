@model ZennoSite.Areas.Admin.Models.Client

@{
    ViewData["Title"] = "Добавление клиента";
}

<h2>Добавление клиента</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtmSource" class="control-label"></label>
                <input asp-for="UtmSource" class="form-control" value="skladchik.com" />
                <span asp-validation-for="UtmSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsBanned" /> @Html.DisplayNameFor(model => model.IsBanned)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
